<h1>Welcome, <%= @user.username %></h1>
<img src="<%= @user.image_url %>"/>

<div class="listings">
<h2>Recent Claims</h2>
<ul>
  <% @recent_claims.each do |claim| %>
  <li><a href="/claims/<%= claim.id %>"><%= claim.body %></a></li>
  <% end %>
</ul>
</div>

<div class="listings">
<h2>Recent Arguments</h2>
<ul>
  <% @recent_arguments.each do |arg| %>
    <% if arg.is_supporting? %>
      <li><a href="/arguments/<%= arg.id %>">Supporting: <%= arg.conclusion.body %></a></li>
    <% else %>
      <li><a href="/arguments/<%= arg.id %>">Opposing: <%= arg.conclusion.body %></a></li>
    <% end %>
  <% end %>
</ul>
</div>
