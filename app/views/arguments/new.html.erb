<%= form_for @argument do |arg| %>

    <!-- Arguments Conclusion -->
  <%= fields_for :conclusion, @argument.conclusion do |conc| %>
    <%= conc.label :body, 'Conclusion:' %>
    <%= conc.text_field :body %>
  <% end -%>
  <br><br>

	<% @argument.premises.each_with_index do |prem, i|%>
	  <%= fields_for "premise#{i+1}" do |p| %>
	    <%= p.label :body, "Premise #{i+1}" %>
	    <%= p.text_field :body %>
	  	<%= p.label :_destroy, "Delete" %>
	  	<%= p.check_box :_destroy%>
	    <% end -%>
	    <br>
	<% end -%>

  <%= submit_tag("submit") %>
<% end %>